{
  "openapi": "3.0.0",
  "info": {
    "title": "Prueba de Seguridad",
    "version": "1.0.0",
    "description": "Prueba de inyecci√≥n de PHP"
  },
  "paths": {
    "/execute": {
      "post": {
        "summary": "Ejecuta un comando PHP",
        "description": "Esta ruta ejecuta un comando PHP (vulnerable a inyecciones).",
        "operationId": "executeCommand",
        "parameters": [
          {
            "name": "cmd",
            "in": "query",
            "description": "Comando a ejecutar",
            "required": true,
            "schema": {
              "type": "string",
              "example": "<?php system('id'); ?>"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Comando ejecutado correctamente",
            "content": {
              "application/json": {
                "example": {
                  "output": "id"
                }
              }
            }
          }
        }
      }
    }
  }
}
